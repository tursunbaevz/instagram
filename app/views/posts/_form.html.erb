<%= form_for [current_user, @post], html: { class: 'form-horizontal', remote: true } do |f| %>
	<div class="form-group text-center">
		<h4>New Post</h4>
			 <%=  f.file_field :image %>	
			 <%=  f.label :description %>
			 <%=  f.text_area :description %>
			 <%=  f.hidden_field :user_id, :value => current_user.id %>
		   <div class="form-group text-center">
	     <%= f.submit  class: 'btn-success' %>
		</div>	
	 </div>	
	</div>
<% end%>	
	