<!DOCTYPE html>
<html>
  <head>
    <title>Instagramm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-default  ">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Instagram', root_path, class: 'navbar-brand' %>
          </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
              <ul class="nav navbar-nav">
              </ul>
              <ul class="navbar-nav navbar-right"> 
                <% if user_signed_in? %>
                 <li><%= link_to 'My Profile', users_path, class: 'navbar-brand' %></li> 
                <li><%= link_to 'New Post', new_post_path, class: 'navbar-brand' %></li> 
                  <p class="navbar-text">
                    Hello, <%= link_to current_user.name,   users_path(current_user), class: 'navbar-link' %>
                  </p>
                    <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
                  <ul class="nav navbar-nav">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><%= link_to 'Edit profile', edit_user_registration_path(current_user) %></li>
                        <li><a href="#">View orders</a></li>
                        <li class="divider"></li>
                        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
                      </ul>
                    </li>
                  </ul>
                <% else %>
                  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-default navbar-btn' %>
                  <%= link_to 'Log in', new_user_session_path, class: 'btn btn-default navbar-btn' %>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
        <div class="container">

    <%= yield %>
    </div>
  </body>
</html>
